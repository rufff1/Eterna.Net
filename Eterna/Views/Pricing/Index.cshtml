@model List<Pricing>
@{
    int prservicesCount = ViewBag.PrServicesCount;
    List<PrService> prServices = ViewBag.prservices; 
    }


<main id="main">

    <!-- ======= Breadcrumbs ======= -->
    <section id="breadcrumbs" class="breadcrumbs">
        <div class="container">

            <ol>
                <li><a asp-controller="home" asp-action="index">Home</a></li>
                <li>Pricing</li>
            </ol>
            <h2>Pricing</h2>

        </div>
    </section><!-- End Breadcrumbs -->
    <!-- ======= Pricing Section ======= -->
    <section id="pricing" class="pricing">
        <div class="container">

            <div class="row no-gutters">

                @foreach (Pricing pricing in Model)
                {
                    <div class="col-lg-4 box @(pricing.IsFeatured ? "featured":"")">
                        <h3>@pricing.Name</h3>
                        <h4><sup>$</sup>@pricing.Price<span> / month</span></h4>
                        <ul>
                            @foreach (PrService prService in prServices)
                            {


                                <li class="@(pricing.PricingServices.Exists(ps => ps.PrServiceId == prService.Id) ? "":"na")">@pricing.Name</li>
                            }
                        </ul>
                        <a href="#" class="buy-btn">Buy Now</a>
                    </div>

                }




            </div>

        </div>
    </section><!-- End Pricing Section -->

</main><!-- End #main -->