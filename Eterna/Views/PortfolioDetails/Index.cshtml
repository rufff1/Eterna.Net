@model  List<PortfolioDetail>
<main id="main">

    <!-- ======= Breadcrumbs ======= -->
    <section id="breadcrumbs" class="breadcrumbs">
        <div class="container">

            <ol>
                <li><a asp-controller="home" asp-action="index">Home</a></li>
                <li>Portfolio Details</li>
            </ol>
            <h2>Portfolio Details</h2>

        </div>
    </section><!-- End Breadcrumbs -->
    <!-- ======= Portfolio Details Section ======= -->
    <section id="portfolio-details" class="portfolio-details">
        <div class="container">

            <div class="row gy-4">

                <div class="col-lg-8">
                    <div class="portfolio-details-slider swiper">
                        <div class="swiper-wrapper align-items-center">

                            @foreach (PortfolioDetail portfolioDetail in Model)
                            {
                              <div class="swiper-slide">
                                  <img src="@portfolioDetail.Image" alt="">
                              </div>

                            }


                        </div>
                        <div class="swiper-pagination"></div>
                    </div>
                </div>

                <div class="col-lg-4">
                    <div class="portfolio-info">
                        <h3>Project information</h3>
                        <ul>
                            @foreach (PortfolioDetail portfolioDetail1 in Model)
                            {
                                <li><strong>Category</strong>: @portfolioDetail1.Category</li>
                                <li><strong>Client</strong>: @portfolioDetail1.Client</li>
                                <li><strong>Project date</strong>: @portfolioDetail1.DateTime</li>
                                <li><strong>Project URL</strong>: <a href="#">@portfolioDetail1.ProjectUrl</a></li>
                            }
                        </ul>
                    </div>
                    <div class="portfolio-description">
                        @foreach (PortfolioDetail portfolioDetail2 in Model)
                        {
                            <h2>@portfolioDetail2.Tittle</h2>
                            <p>
                               @portfolioDetail2.Description
                            </p>
                        }
                    </div>
                </div>

            </div>

        </div>
    </section><!-- End Portfolio Details Section -->

</main><!-- End #main -->